@using DataAccess1.Model
@model IList<Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
   // Layout = null;

}
<p>
    @if (ViewBag.user != null)
    {<h1>Vítejte: @ViewBag.user</h1>}
</p>
@*<a href="@Url.Action("Create","Items")" class="btn btn-primary pull-right">Přidat položku</a>*@



<div class="clearfix"></div>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Obrázek</th>
            <th>Id</th>
            <th>Nazev</th>
            <th>Cena</th>
            <th>Vyrobce</th>
            <th>Mnozstvi</th>
            <th>Akce</th>

        </tr>
    </thead>


    <tbody>
        @foreach (Item i in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(i.ImageName))
                    {
                        <a href="@Url.Content("~/Uploads/Item/" + i.ImageName)">
                            <img alt="image" src="@Url.Content("~/Uploads/Item/" + i.ImageName)" />
                        </a>
                    }
                </td>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>@i.Price</td>
                <td>@i.Producer</td>
                <td>@i.Quantity</td>
                <td>
                    @Html.ActionLink("Detail", "Detail", "Items", new { id = i.Id }, null)
                    @* @Html.ActionLink("Edit", "Edit", "Items", new { id = i.Id }, null)*@
                    @* @Html.ActionLink("Delete", "Delete", "Items", new { id = i.Id }, new { onclick = "return confirm('Opravdu smazat?" + i.Name + "');" })*@
                </td>
            </tr>

        }


    </tbody>

</table>


<div class="clearfix"></div>

@if (ViewBag.Pages != null)
{
    <ul class=pagination>
        @for (int i = 1; i <= ViewBag.Pages; i++)
        {
            <li class="@(ViewBag.CurrentPage==i ? "active":"")"><a href="@Url.Action("Index","Items",new {page=i })">@i</a></li>
        }
    </ul>

}


<div class="card mb-4">
    <div class="card-header">Categories</div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <ul class="list-unstyled mb-0">
                    @if (ViewBag.Categories != null)
                        {
                            foreach (ItemCategory i in ViewBag.Categories)
                            {

                                <li><a href="@Url.Action("Category","Items",new {id=i.Id })">@i.CategoryName</a></li>
                            }
                        }
                </ul>

            </div>
        </div>
    </div>
</div>
